<Window x:Class="AmazonNovaDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="Amazon Nova Chat" 
        WindowState="Normal"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Width="1200"
        Height="800"
        Background="Black"
        Closing="Window_Closing"
        StateChanged="Window_StateChanged"
        Loaded="Window_Loaded">
    <Grid>
        <wv2:WebView2 x:Name="webView" 
                      Source="https://nova.amazon.com/chat"
                      NavigationCompleted="WebView_NavigationCompleted"/>
    </Grid>
    
    <tb:TaskbarIcon x:Name="NotifyIcon"
                    ToolTipText="Amazon Nova Chat"
                    TrayMouseDoubleClick="NotifyIcon_TrayMouseDoubleClick">
        <tb:TaskbarIcon.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Show" Click="ShowMenuItem_Click"/>
                <MenuItem Header="Exit" Click="ExitMenuItem_Click"/>
            </ContextMenu>
        </tb:TaskbarIcon.ContextMenu>
    </tb:TaskbarIcon>
</Window>

